@model RPGSite.Models.Events

@{
    ViewBag.Title = "Delete";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<article>
    <h2 class="title">
        @Html.DisplayFor(model => model.Title)
    </h2>
    <p class="author">@Html.DisplayNameFor(model => model.User): @Html.DisplayFor(modelItem => modelItem.User.UserName)</p>
    <p class="date">
        Date:
        @if (Model.Updated == null)
        {
            @Html.DisplayFor(model => model.Created)
        }
        else
        {
            @Html.DisplayFor(model => model.Updated)
        }
    </p>
    <p class="duration">
        Starts from: @Html.DisplayFor(modelItem => modelItem.StartDate) |
        Ends at: @Html.DisplayFor(modelItem => modelItem.EndDate)
    </p>
    <p class="description">@Html.DisplayFor(model => model.Description)</p>

</article>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
}
<hr />
