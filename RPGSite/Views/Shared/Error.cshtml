@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<h1 class="text-danger">Error.</h1>
@*<h2 class="text-danger">An error occurred while processing your request.</h2>*@
<h2 class="text-danger">We're sorry, we've hit an unexpected error.
    <a href="#" onClick="goBack()">Click here</a>
    if you'd like to go back and try that again.</h2>
<script>
    function goBack() {
        window.history.back();
    }
</script>

