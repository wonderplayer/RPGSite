@model RPGSite.ViewModels.InventoryViewModel
@{
    ViewBag.Title = "Inventory";
}

<h2>Inventory</h2>

<table>
    <tr>
        <th>Name</th>
        <th>Quantity</th>
    </tr>
    @foreach (var item in Model.Inventory)
    {
        <tr id="row-@item.ID">
            <td>
                @item.Equipment.Title
            </td>
            <td id="item-count-@item.ID">
                @item.Quantity
            </td>
        </tr>
    }
    <tr>
        <td></td>
    </tr>
</table>