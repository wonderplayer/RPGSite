@model RPGSite.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        //Document.ready -> link up remove event handler
        $(".RemoveLink").click(function () {
            //Get the id from the link
            var recordToDelete = $(this).attr("data-id");
            if (recordToDelete != '') {
                //Perform ajax post
                $.post("/ShoppingCart/RemoveFromCart", { "id": recordToDelete },
                    function (data) {
                        //Successful request get here
                        //Update the page elements
                        if (data.ItemCount == 0) {
                            $("#row-" + data.DeleteId).fadeOut('slow');
                        } else {
                            $('#item-count-' + data.DeleteId).text(data.ItemCount);
                        }
                        $('#cart-total').text(data.CartTotal);
                        $('#update-message').text(data.Message);
                        $('#cart-status').text('Cart (' + data.CartCount + ')');
                    });
            }
        });
    });
</script>

<h2>
    <em>Review</em> your cart:
</h2>
<p class="button">
    @Html.ActionLink("Checkout>>", "Payment", "Checkout")
</p>

<div id="update-message"></div>
<table>
    <tr>
        <th>
            Equipment Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.CartItems)
    {
        <tr id="row-@item.RecordID">
            <td>
                @Html.ActionLink(item.Equipment.Title, "Details", "Equipments", new { id = item.EquipmentID}, null)
            </td>
            <td>
                @item.Equipment.Price
            </td>
            <td id="item-count-@item.RecordID">
                @item.Count
            </td>
            <td>
                <a href="#" class="RemoveLink" data-id="@item.RecordID">Remove from cart</a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td>
        </td>
        <td>
        </td>
        <td id="cart-total">
            @Model.CartTotal
        </td>
    </tr>
</table>